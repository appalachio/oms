<h1 class="display-4 fw-semibold mt-5"><%= title @organization.name %></h1>
<% if @organization.subdomain? %>
  <h2 class="display-6 fw-medium mt-2"><%= @organization.subdomain %></h2>
<% end %>
<% if @organization.domain? %>
  <h2 class="display-6 fw-medium mt-2"><%= @organization.domain %></h2>
<% end %>
<% set_meta_tags description: @organization.about.to_plain_text %>

<div class="border-bottom border-1 pt-2 pb-2 mb-2">
  <div>Last updated <relative-time datetime="<%= @organization.updated_at %>"><%= @organization.updated_at %></relative-time></div>
  <div class="pb-2">Created <relative-time datetime="<%= @organization.created_at %>"><%= @organization.created_at %></relative-time></div>
</div>
<div class="btn-group mb-4" role="group" aria-label="Actions you can perform on this organization">
  <%= link_to :back, class: "btn btn-secondary" do %>
    <i class="bi bi-caret-left-square"> Back</i>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to edit_organization_path(@organization), class: "btn btn-primary" do %>
      <i class="bi bi-pencil-square"> Edit</i>
    <% end %>
    <% if @organization.active? %>
      <%= button_to archive_organization_path(@organization), method: :put, class: "btn btn-warning" do %>
        <i class="bi bi-archive"> Archive</i>
      <% end %>
    <% else %>
      <%= button_to restore_organization_path(@organization), method: :put, class: "btn btn-warning" do %>
        <i class="bi bi-archive-fill"> Restore</i>
      <% end %>
    <% end %>
    <%= button_to @organization, data: { confirm: "Are you sure you want to delete this organization? This cannot be undone.", turbo_confirm: "Are you sure you want to delete this organization? This cannot be undone." }, method: :delete, class: "btn btn-danger" do %>
      <i class="bi bi-trash"> Delete</i>
    <% end %>
  <% end %>
</div>

<div class="mb-5">
  <%= @organization.about %>
</div>
