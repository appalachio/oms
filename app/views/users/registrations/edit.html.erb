<h1 class="display-4 fw-semibold mt-5"><%= title "Edit Account" %></h1>
<% set_meta_tags description: "Edit the information associated with your account." %>

<div class="border-bottom border-1 pt-2 pb-2 mb-2">
  <div>Last updated <relative-time datetime="<%= resource.updated_at %>"><%= resource.updated_at %></relative-time></div>
  <div class="pb-2">Created <relative-time datetime="<%= resource.created_at %>"><%= resource.created_at %></relative-time></div>
</div>
<div class="btn-group mb-4" role="group" aria-label="Actions you can perform on this user">
  <%= link_to :back, class: "btn btn-secondary" do %>
    <i class="bi bi-caret-left-square"> Back</i>
  <% end %>
  <%= button_to registration_path(resource_name), data: { confirm: "Are you sure you want to delete your account? This cannot be undone.", turbo_confirm: "Are you sure you want to delete your account? This cannot be undone." }, method: :delete, class: "btn btn-danger" do %>
    <i class="bi bi-trash"> Delete Account</i>
  <% end %>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Leave blank if you don't want to change your password",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "You must provide your current password to confirm these changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
