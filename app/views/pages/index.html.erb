<h1 class="display-4 fw-semibold mt-5">Pages</h1>
<h4 class="display-6 fw-medium mt-2"><%= page_entries_info @pages %></h2>

<div class="border-bottom border-1 pt-2 pb-2 mb-2"></div>

<div class="btn-group mb-4" role="group" aria-label="Actions you can perform on pages">
  <%= link_to :back, class: "btn btn-secondary" do %>
    <i class="bi bi-caret-left-square"> Back</i>
  <% end %>
  <%= link_to new_page_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-circle"> New Page</i>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-2 mb-3">
  <%= paginate @pages %>
</div>

<div id="pages" class="list-group">
  <% @pages.each do |page| %>
    <%= render page %>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-3">
  <%= paginate @pages %>
</div>
