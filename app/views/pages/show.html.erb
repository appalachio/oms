<p style="color: green"><%= notice %></p>

<%= render @page %>

<div>
  <%= link_to "Edit this page", edit_page_path(@page) %> |
  <%= link_to "Back to pages", pages_path %>
  <% if @page.active? %>
    <%= button_to "Archive", archive_page_path(@page), method: :put %>
  <% else %>
    <%= button_to "Restore", restore_page_path(@page), method: :put %>
  <% end %>
  <%= button_to "Destroy this page", @page, method: :delete %>
</div>
