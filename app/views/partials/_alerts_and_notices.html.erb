<% flash.each do |type, message| %>
  <% if type == "alert" %>

    <div class="alert alert-danger d-flex-col align-items-center alert-dismissible fade show" role="alert">
      <h2 class="h2 border-bottom border-1 pb-2 m-2"><i class="bi bi-exclamation-triangle me-2"></i>Alert</h2>
      <div class="m-2">
        <%= message %>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close this alert"></button>
    </div>

  <% else %>

    <div class="alert alert-primary d-flex-col align-items-center alert-dismissible fade show" role="alert">
      <h2 class="h2 border-bottom border-1 pb-2 m-2"><i class="bi bi-info-circle me-2"></i>Notice</h2>
      <div class="m-2">
        <%= message %>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close this alert"></button>
    </div>

  <% end %>
<% end %>
